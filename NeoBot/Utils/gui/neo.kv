#:kivy 1.10.1
#:import hextype kivy.utils.get_color_from_hex

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<TitleLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0


GridLayout:
    orientation: 'vertical'
    canvas: 
        Color: 
            rgb: hextype("#2c2f33")
        Rectangle: 
            pos: self.pos
            size: self.size
    rows: 2
    GridLayout:
        rows: 1
        TitleLabel:
            text: '[color=87ceeb]NEO[/color][color=008080]BOT[/color]'
            markup: True
            font_size: '16pt'
            background_color: hextype("#23272a")
            halign: 'left'
            padding_x: 10
